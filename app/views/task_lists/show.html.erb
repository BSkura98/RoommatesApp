<div class="card-header d-flex justify-content-between">
	<div>
		<h5 class='m-0'><b><%= @task_list.title %></b></h5>
		<p class='text-secondary m-0'><small><%= @task_list.uncompleted_tasks %> tasks</small></p>
	</div>
	<div>
		  <%= link_to 'Edit', edit_task_list_path(@task_list), class: 'btn btn-secondary' %>
	</div>
</div>

<div class="card-body">
	<%= form_with(model: [@task_list, @task]) do |f| %>
	  <div class="input-group mb-4">
	    <%= f.text_field :description, class: "form-control", placeholder: "Add a task" %>
	    <div class="input-group-append">
	    	<%= f.submit "Add", class: "btn btn-primary input-group-btn" %>
	    </div>
	  </div>
	<% end %>
	<ul class='list-group'>
	  <% @task_list.tasks.each do |task| %>
	  	<% if task.completed? %>
		    <li class='list-group-item bg-light'>
		    	<div class="d-flex justify-content-between">
		    		<span class="text-muted">
		    			<em><%= task.description %></em>	
		    		</span>
		    		<%= link_to '#', class: 'btn btn-dark' do %>
		    			<i class='fas fa-times'></i>
		    		<% end %>
		    	</div>
		    </li>
	  	<% else %>
		    <li class='list-group-item'>
		    	<div class="d-flex justify-content-between">
		    		<span>
		    			<%= task.description %>	
		    		</span>
		    		<%= link_to '#', class: 'btn btn-info' do %>
		    			<i class='fas fa-check'></i>
		    		<% end %>
		    	</div>
		    </li>
	  	<% end %>
	  <% end %>
	</ul>
</div>
