<div class="card-header d-flex justify-content-between">
	<div>
		<h5 class='m-0'><b><%= @task_list.title %></b></h5>
		<p class='text-secondary m-0'><small>0 tasks</small></p>
	</div>
	<div>
		  <%= link_to 'Edit', edit_task_list_path(@task_list), class: 'btn btn-secondary' %>
	</div>
</div>

<div class="card-body">
	<ul class='list-group'>
	  <% @task_list.tasks.each do |task| %>
	    <li class='list-group-item'>
	    	<div class="d-flex justify-content-between">
	    		<span>
	    			<%= task.description %>	
	    		</span>
	    		<%= link_to '#', class: 'btn btn-info' do %>
	    			<i class='fas fa-check'></i>
	    		<% end %>
	    	</div>
	    </li>
	  <% end %>
	</ul>
</div>
